<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="top|bottom|center_vertical|fill_vertical|center|fill"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_weight="1.0"
            android:maxLines="1"
            android:inputType="phone"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="@string/server_host" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:text="save" />

        <Button
            android:id="@+id/reload"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="top|bottom|center_vertical|fill_vertical|center|fill"
            android:text="reload" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/send_vk_down"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/min_volume"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/send_vk_up"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1.0"
            android:layout_gravity="center"
            app:srcCompat="@drawable/max_volume"
            android:adjustViewBounds="true"
            android:padding="10dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/send_space"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1.0"
            android:text="Pause" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/send_up"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="Prev" />

            <Button
                android:id="@+id/send_down"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="Next" />

            <Button
                android:id="@+id/send_enter"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="Enter" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fast_left"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="FLeft" />

            <Button
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="Left" />

            <Button
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="Right" />

            <Button
                android:id="@+id/fast_right"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1.0"
                android:layout_gravity="center"
                android:text="FRight" />
        </LinearLayout>

</LinearLayout>
